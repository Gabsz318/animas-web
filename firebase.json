{
    "database": {
        "rules": "database.rules.json"
    },
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": [{
            "target": "animas-web",
            "public": "animas-web/dist",
            "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
            "rewrites": [{
                "source": "**",
                "destination": "/index.html"
            }]
        },
        [{
            "target": "app",
            "public": "www",
            "ignore": [
                "firebase.json",
                "**/.*",
                "**/node_modules/**"
            ],
            "rewrites": [{
                "source": "**",
                "destination": "/index.html"
            }],
            "headers": [{
                    "source": "/build/app/**",
                    "headers": [{
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000"
                    }]
                },
                {
                    "source": "ngsw-worker.js",
                    "headers": [{
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }]
                }
            ]
        }]
    ]
}